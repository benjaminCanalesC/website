---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="bumblebee">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"> -->
    <meta
      name="description"
      content="Community of students from the University of Santiago, Chile working together to create projects for the university community and more!"
    /><meta
      name="twitter:image:src"
      content="https://i.imgur.com/ZJioXLr.png"
    /><meta name="twitter:site" content="@OpenSourceUSACH" /><meta
      name="twitter:card"
      content="summary_large_image"
    /><meta name="twitter:title" content="Open Source USACH" /><meta
      name="twitter:description"
      content="Community of students from the University of Santiago, Chile working together to create projects for the university community and more!"
    /><meta
      property="og:image"
      content="https://i.imgur.com/ZJioXLr.png"
    /><meta
      property="og:image:alt"
      content="Community of students from the University of Santiago, Chile working together to create projects for the university community and more!"
    /><meta property="og:site_name" content="Open Source USACH" /><meta
      property="og:type"
      content="object"
    /><meta property="og:title" content="Open Source USACH" /><meta
      property="og:url"
      content="https://www.osusach.com/"
    /><meta
      property="og:description"
      content="Community of students from the University of Santiago, Chile working together to create projects for the university community and more!"
    /></head
  >

  <body class="bg min-h-screen">
    <Nav />
    <main class="min-h-[70vh]">
      <slot />
    </main>
    <Footer />
  </body>
  <style is:global>
    * {
      font-family: "Inter", sans-serif;
    }
    .bg {
      background-image: repeating-linear-gradient(
        45deg,
        var(--fallback-b1, oklch(var(--b1))),
        var(--fallback-b1, oklch(var(--b1))) 13px,
        var(--fallback-b2, oklch(var(--b2))) 13px,
        var(--fallback-b2, oklch(var(--b2))) 14px
      );
    }
  </style>
</html>
