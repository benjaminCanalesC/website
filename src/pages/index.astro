---
import Layout from "../layouts/Layout.astro";
import ProjectInDevelopment from "../components/ProjectInDevelopment.astro";
import Nav from "../components/Nav.astro";
import Link from "../components/Link";
import ActiveProject from "../components/ActiveProject";

const activeProjects = [
  {
    title: "Pegas",
    description: "Encuentra tu próxima pega!",
    href: "https://pegas.osusach.com/",
    imageSrc: "/pegas-ss.png",
    contributors: 4,
    releaseDate: "26-04-2024",
  },
  {
    title: "Calculadora de notas",
    description: "Planifica tu semestre inteligentemente.",
    href: "https://notas.osusach.com/",
    imageSrc: "/notas-ss.png",
    contributors: 1,
    releaseDate: "26-04-2024",
  },
  {
    title: "Recursos virtuales para el aprendizaje del lenguaje",
    description:
      "Plataforma creada a petición de un académico de la facultad de humanidades.",
    href: "https://www.recursosaprendizajecastellano.usach.cl/",
    imageSrc: "/recursos-ss.png",
    contributors: 5,
    releaseDate: "26-04-2024",
  },
];

const developmentProjects = [
  {
    href: "https://github.com/open-source-usach/cursosusach-honojs-api",
    title: "CursosUSACH",
    description:
      "Mira qué opinan otros estudiantes acerca de ramos de la USACH.",
    techStack: [
      "/typescript.svg",
      "/vue.svg",
      "/hono.svg",
      "/cfworkers.svg",
      "/turso.svg",
    ],
    lookingForHelp: true,
    projectState: "50%",
  },
];
---

<Layout title="Open Source USACH">
  <div class="mx-0 w-full px-8 pb-4 md:mx-auto md:px-20">
    <div
      class="mx-auto my-5 flex flex-col items-center justify-evenly md:flex-row"
    >
      <div class="text-center md:text-left">
        <h2 class="w-[480px] text-4xl font-semibold">
          Comunidad de estudiantes de la Universidad de Santiago de Chile
        </h2>
        <p>colaborando en proyectos open-source</p>
      </div>
      <div class="flex flex-col items-center">
        <p class="text-center text-xl font-semibold">¿Quiéres ser parte?</p>
        <a
          href="/unete"
          class="link-hover link rounded-badge bg-secondary px-7 py-3 text-center text-6xl font-semibold text-secondary-content"
          >Únete</a
        >
      </div>
    </div>
    <section class="my-4">
      <h2 class="divider divider-neutral my-5 text-lg font-bold">
        Proyectos activos
      </h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
        {activeProjects.map((project) => <ActiveProject {...project} />)}
      </div>
    </section>
    <section class="my-4">
      <h2 class="divider divider-neutral my-5 text-lg font-bold">
        Estamos contruyendo
      </h2>
      <ul class="my-2 flex w-full flex-col gap-4">
        {
          developmentProjects.map((project) => (
            <ProjectInDevelopment {...project} />
          ))
        }
      </ul>
    </section>
  </div>
</Layout>
